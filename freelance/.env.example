# Database Configuration
# For local development with SQLite
DATABASE_URL="file:./local.db"

# For production with Turso (create database: turso db create <db-name>)
# Get URL: turso db show --url <db-name>
# Get token: turso db tokens create <db-name>
TURSO_DATABASE_URL="libsql://[your-database].turso.io"
TURSO_AUTH_TOKEN="your-turso-auth-token"

# Documenso Embedding Configuration
# Get your API key from https://stg-app.documenso.com/settings/tokens
DOCUMENSO_API_KEY="your-documenso-api-key"
DOCUMENSO_TEMPLATE_ID="your-template-id"

# Documenso Host (staging environment - must match where your template lives)
NEXT_PUBLIC_DOCUMENSO_HOST="https://stg-app.documenso.com"
